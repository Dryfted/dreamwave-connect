{
  "name": "dreamwave-connect",
  "version": "1.2.0",
  "description": "Connect your Claude and Codex subscriptions to DreamWave",
  "main": "main.js",
  "homepage": "https://dreamwave.app",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": {
    "name": "DreamWave",
    "email": "support@dreamwave.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dryfted/dreamwave-connect"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "24.6.4"
  },
  "build": {
    "appId": "com.dreamwave.connect",
    "productName": "DreamWave Connect",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "linux": {
      "target": "deb"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
